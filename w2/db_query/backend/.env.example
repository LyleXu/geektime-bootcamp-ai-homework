# OpenAI API Key for natural language to SQL conversion
# Use either standard OpenAI OR Azure OpenAI (not both)

# Standard OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI (uncomment and configure if using Azure)
# AZURE_OPENAI_API_KEY=your_azure_openai_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=your-deployment-name
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# SQLite database path for storing connection metadata
# DB_STORAGE_PATH=~/.db_query/db_query.db

# Query execution timeout in seconds
# QUERY_TIMEOUT=30

# Default LIMIT for queries without explicit LIMIT clause
# DEFAULT_QUERY_LIMIT=1000

# CORS allowed origins (JSON array format)
# Examples: ["*"] or ["http://localhost:5173", "http://localhost:3000"]
CORS_ALLOW_ORIGINS=["*"]
